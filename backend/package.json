{
    "name": "collaborative-map-backend",
    "version": "1.0.0",
    "description": "Backend for real-time collaborative map application with spatial comments",
    "main": "dist/index.js",
    "type": "module",
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "scripts": {
        "start": "node dist/index.js",
        "dev": "nodemon",
        "build": "tsc",
        "type-check": "tsc -p tsconfig.json --noEmit",
        "type-check:watch": "tsc -p tsconfig.test.json --noEmit --watch",
        "lint": "eslint \"src/**/*.ts\"",
        "lint-full": "npm run type-check && npm run lint",
        "knip": "knip"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "pg-promise": "^11.10.2",
        "socket.io": "^4.8.1",
        "ts-node": "^10.9.2"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/node": "^22.13.9",
        "@typescript-eslint/eslint-plugin": "^8.26.0",
        "@typescript-eslint/parser": "^8.26.0",
        "eslint": "^9.21.0",
        "eslint-config-prettier": "^10.0.2",
        "eslint-plugin-prettier": "^5.2.3",
        "knip": "^5.45.0",
        "nodemon": "^3.1.9",
        "tsx": "^4.19.3",
        "typescript": "^5.8.2"
    }
}
