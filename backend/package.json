{
    "name": "collaborative-map-backend",
    "version": "1.0.0",
    "description": "Backend for real-time collaborative map application with spatial comments",
    "main": "dist/index.js",
    "type": "module",
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "scripts": {
        "start": "node dist/index.js",
        "dev": "nodemon",
        "build": "tsc",
        "type-check": "tsc -p tsconfig.json --noEmit",
        "type-check:watch": "tsc -p tsconfig.test.json --noEmit --watch",
        "lint": "eslint \"src/**/*.ts\"",
        "lint-full": "npm run type-check && npm run lint",
        "knip": "knip"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "pg-promise": "^11.5.0",
        "socket.io": "^4.7.2"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/node": "^20.17.19",
        "@typescript-eslint/eslint-plugin": "^6.13.1",
        "@typescript-eslint/parser": "^6.13.1",
        "eslint": "^8.54.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-prettier": "^5.2.3",
        "knip": "^5.45.0",
        "tsx": "^4.6.0",
        "typescript": "^5.7.3"
    }
}
